<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b4"
    tools:context=".Main3Activity">

    <Button
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:text="CREATE"
        android:textColor="#EEEEEE"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignTop="@+id/imageView2"
        android:ems="10"
        android:hint="ACCOUNT ID"
        android:inputType="textPersonName"
        android:textColorHint="#EEEEEE"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="196dp"
        android:ems="10"
        android:hint="A/C HOLDER'S NAME"
        android:inputType="textPersonName"
        android:textColorHint="#EEEEEE"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignStart="@+id/editText"
        android:layout_alignTop="@+id/imageView7"
        android:ems="10"
        android:hint="BALANCE"
        android:inputType="textPersonName"
        android:textColorHint="#EEEEEE"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="97dp"
        app:srcCompat="@drawable/id2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/editText2"
        android:layout_marginStart="-12dp"
        android:layout_marginTop="-3dp"
        app:srcCompat="@drawable/a1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:text="CERATE ACCOUNT"
        android:textAlignment="center"
        android:textColor="#EEEEEE"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/editText"
        android:layout_alignTop="@+id/imageView4"
        android:ems="10"
        android:hint="A/C TYPE"
        android:inputType="textPersonName"
        android:textColorHint="#EEEEEE"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="103dp"
        android:layout_height="74dp"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="151dp"
        app:srcCompat="@drawable/type" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="92dp"
        android:layout_height="87dp"
        android:layout_above="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        app:srcCompat="@drawable/bal2" />

</RelativeLayout>